<%- include('../partials/header') -%>


<div class="col-9">
    <div class="container p-3 w-100">
        <h1 class="mt-5 mb-4">Update Products</h1>
        <%- include('../partials/messages') -%>

        <% if(message != '' && message.includes('update started')) { %>
            <div class="alert alert-success" role="alert">
                <b>Update started successfully. Please read the following information: </b>
                <ul>
                    <li>Make sure that you have a fast and active internet connection.</li>
                    <li>To see update information, go to dashboard.</li>
                </ul>
            </div>
        <% } %>

        <div class="mt-3 justify-content-center d-flex">
            <form action="/update" id="updateForm" method="POST" class="mt-2">
                <input type="submit" id="updatebtn" value="Update" class="btn btn-danger px-5 py-2 mt-5">
            </form>
        </div>

    </div>
</div>


<%- include('../partials/footer') -%>