<%- include('../partials/header') -%>


<div class="col-9">

    <div class="container p-3 w-100">

        <h1 class="mt-5 mb-4">Out of Stock Products</h1>
        <%- include('../partials/messages') -%>

        <div class="container">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                <thead>
                    <tr>
                        <th>SKU</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tfoot>
                    <tr>
                        <th>SKU</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>

                <tbody>

                    <% product.forEach((pro) => { %>

                        <% if(pro.oldstock.includes('In stock')) { %>
                            <tr style="background-color: red; color: white;">
                                <td><%= pro.sku %></td>
                                <td><%= pro.title %></td>
                                <td><%= pro.newprice %></td>
                                <td><%= pro.newstock %></td>
                                <td>
                                    <a href="<%= pro.url %>" class="btn btn-primary p-2" target="black"><i class="fas fa-eye"></i></a>
                                    <form action="/delete/product/<%= pro.id %>?_method=DELETE" style="display: inline;" method="POST">
                                    
                                        <input type="hidden" value="DELETE" name="_method">
                                        <button class="btn btn-light p-2" style="cursor: pointer;" type="submit"><i class="fas fa-trash"></i></button>
        
                                    </form>    
                                </td>
                            </tr>

                        <% } else { %>

                            <tr>
                                <td><%= pro.sku %></td>
                                <td><%= pro.title %></td>
                                <td><%= pro.newprice %></td>
                                <td><%= pro.newstock %></td>
                                <td>
                                    <a href="<%= pro.url %>" class="btn btn-primary p-2" target="black"><i class="fas fa-eye"></i></a>
                                    <form action="/delete/product/<%= pro.id %>?_method=DELETE" style="display: inline;" method="POST">
                                    
                                        <input type="hidden" value="DELETE" name="_method">
                                        <button class="btn btn-danger p-2" style="cursor: pointer;" type="submit"><i class="fas fa-trash"></i></button>
      
                                    </form>    
                                </td>
                            </tr>

                        <% } %>
                    <% }) %>

                </tbody>

            </table>
        </div>

    </div>

</div>


<%- include('../partials/footer') -%>