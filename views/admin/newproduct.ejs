<%- include('../partials/header') -%>


<div class="col-9">

    <div class="container p-3 w-100">
        <h1 class="mt-5 mb-4">Add New Product</h1>

        <%- include('../partials/messages') -%>

        <form action="/product/new" class="mt-2" method="GET" id="newpostform">
        
            <div class="row mt-5 justify-content-center d-flex">
                <div class="col-12">
                    <input type="text" class="form-control" name="search" placeholder="Enter Product URL" required>
                </div>
            </div>

            <div class="justify-content-center d-flex mt-4">
                <button class="btn btn-danger w-25 py-2" id="fetchBtn">Fetch Data</button>
            </div>

        </form>

        <form action="/product/new" method="POST" class="mt-2">
        
            <div class="row mt-5 justify-content-center d-flex">
                <div class="col-12 mt-4">
                    <input type="text" class="form-control" name="url" placeholder="Product URL" value="<%= productData.productUrl %>" readonly required>
                </div>

                <div class="col-12 mt-4">
                    <input type="text" class="form-control" name="title" placeholder="Product Title" value="<%= productData.title %>" readonly required>
                </div>

                <div class="col-12 mt-4">
                    <input type="text" class="form-control" name="price" placeholder="Product Price" value="<%= productData.price %>" readonly required>
                </div>

                <div class="col-12 mt-4">
                    <input type="text" class="form-control" name="stock" placeholder="Product Stock" value="<%= productData.stock %>" readonly required>
                </div>

                <div class="col-12 mt-4">
                    <input type="text" class="form-control" name="sku" placeholder="Enter Product SKU" required>
                </div>

            </div>

            <div class="justify-content-center d-flex mt-4">
                <button class="btn btn-danger w-25 py-2" id="publishBtn">Save Data</button>
            </div>

        </form>
    </div>

</div>


<%- include('../partials/footer') -%>